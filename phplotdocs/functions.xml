  <listitem><para><xref linkend="SetSkipLeftTick" /></para></listitem>
  <listitem><para><xref linkend="SetSkipRightTick" /></para></listitem>
  <listitem><para><xref linkend="SetSkipTopTick" /></para></listitem>
