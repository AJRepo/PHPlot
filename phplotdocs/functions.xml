  <listitem><para><xref linkend="SetLegendBgColor" /></para></listitem>
  <listitem><para><xref linkend="SetLegendTextColor" /></para></listitem>
  <listitem><para><xref linkend="SetLightGridColor" /></para></listitem>
  <listitem><para><xref linkend="SetLineStyles" /></para></listitem>
  <listitem><para><xref linkend="SetLineWidths" /></para></listitem>
  <listitem><para><xref linkend="SetPieBorderColor" /></para></listitem>
